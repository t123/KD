@using KD.Infrastructure.ViewModels.Properties
@inherits FluxorComponent

<MudStack>
    <MudText>@ViewModel.Name</MudText>
    <MudText>@ViewModel.Uid</MudText>
    <MudText>@ViewModel.Created</MudText>
    <MudText>@ViewModel.Status</MudText>
    <MudElement>
        <MudText Typo="Typo.h6">Labels</MudText>
        @foreach (var kvp in ViewModel.Labels)
        {
            <MudChip T="string" Variant="Variant.Text" Color="Color.Info">@kvp.Key: @kvp.Value</MudChip>
        }
    </MudElement>
    <MudElement>
        <MudText Typo="Typo.h6">Annotations</MudText>
        @foreach (var kvp in ViewModel.Annotations)
        {
            <MudChip T="string" Variant="Variant.Text" Color="Color.Info">@kvp.Key</MudChip>
        }
    </MudElement>
</MudStack>

@code {
    [Parameter]
    public required PropertyViewState State { get; set; }

    [Parameter]
    public required NamespacePropertyViewModel ViewModel { get; set; }
}