@inherits BaseProperty

<MudElement HtmlTag="div">
    @{
        var ns = State.Value.Property?.Item?.Namespace;

        if (ns != null)
        {
            <MudExpansionPanels>
                <MudExpansionPanel Text="Properties" Expanded="true" Dense="true" Gutters="false" Class="kd-heading">
                    <MudSimpleTable Dense="true">
                        <tbody>
                            <tr>
                                <td>Name</td>
                                <td>@ns.Metadata.Name</td>
                            </tr>
                            <tr>
                                <td>Created</td>
                                <td>@ns.Metadata.CreationTimestamp</td>
                            </tr>
                            <tr>
                                <td>Labels</td>
                                <td><K8sLabels Name="Labels" Labels="@ns.Metadata.Labels" /></td>
                            </tr>
                            <tr>
                                <td>Annotations</td>
                                <td><K8sLabels Name="Annotations" Labels="@ns.Metadata.Annotations" /></td>
                            </tr>
                            <tr>
                                <td>Status</td>
                                <td><MudText Color="@GetTextIndicatorColor(ns.Status?.Phase)">@ns.Status?.Phase</MudText></td>
                            </tr>
                        </tbody>
                    </MudSimpleTable>
                </MudExpansionPanel>
            </MudExpansionPanels>
        }
    }
</MudElement>